<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.AnchorPane?>

<?import javafx.scene.layout.VBox?>
<?import javafx.geometry.Insets?>

<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<AnchorPane fx:controller="application.ScientificController" xmlns:fx="http://javafx.com/fxml/1">

    <VBox spacing="5" alignment="CENTER">
        <padding><Insets left="5" right="5" bottom="5" top="5"/></padding>

        <HBox alignment="CENTER">
            <padding><Insets top="10" bottom="10" /></padding>
            <Label fx:id="singleEventProbabilityLabel" text="Single Event Probability"/>
        </HBox>

        <HBox spacing="5">
            <VBox spacing="10" prefWidth="120" >
                <Label text="Possible outcomes"/>
                <Label text="Events occurred"/>
            </VBox>

            <VBox>
                <TextField />
                <TextField />
            </VBox>
        </HBox>

        <HBox alignment="CENTER">
            <padding><Insets top="10" bottom="10" /></padding>
            <Button text="Calculate" alignment="CENTER" prefWidth="200"/>
        </HBox>

        <HBox spacing="5">
            <VBox spacing="10" prefWidth="120" >
                <Label text="Probability"/>
            </VBox>

            <VBox>
                <TextField />
            </VBox>
        </HBox>

    </VBox>
</AnchorPane>