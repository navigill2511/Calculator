<?xml version="1.0" encoding="UTF-8" ?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>

<AnchorPane fx:controller="application.ScientificController" xmlns:fx="http://javafx.com/fxml/1">
<VBox spacing="3" alignment="CENTER">

    <fx:include source="navigation.fxml" alignment="CENTER_LEFT" />

    <HBox>
        <padding><Insets left="5" right="5" top="4" bottom="4"/></padding>
        <TextField fx:id="scientificTextField" alignment="BASELINE_RIGHT" prefWidth="494" prefHeight="50" promptText="0" />
    </HBox>

    <HBox spacing="10" alignment="CENTER_LEFT">
        <padding><Insets left="5" right="5"/></padding>

        <HBox spacing="3" alignment="CENTER_LEFT">
        <Button text="MOD" prefWidth="50" />
        <Button text="π"   prefWidth="50" />
        <Button text="e"   prefWidth="50" />
        <Button text="\%"  prefWidth="50" />
        <Button text="( )" prefWidth="50" />
        <Button text="DEL" prefWidth="50" />
        </HBox>

        <HBox spacing="3" alignment="CENTER_LEFT">
        <Button text="AC"  prefWidth="40" />
        <Button text="+/-" prefWidth="40" />
        <Button text="\%"  prefWidth="40" />
        <Button text="/"   prefWidth="40" />
        </HBox>

    </HBox>

    <HBox spacing="10" alignment="CENTER_LEFT">
        <padding><Insets left="5" right="5"/></padding>

        <HBox spacing="3" alignment="CENTER_LEFT">
        <Button text="sin"  prefWidth="50" />
        <Button text="cos"  prefWidth="50" />
        <Button text="tan"  prefWidth="50" />
        <Button text="sinh" prefWidth="50" />
        <Button text="cosh" prefWidth="50" />
        <Button text="tanh" prefWidth="50" />
        </HBox>

        <HBox spacing="3" alignment="CENTER_LEFT">
        <Button text="7" prefWidth="40" />
        <Button text="8" prefWidth="40" />
        <Button text="9" prefWidth="40" />
        <Button text="X" prefWidth="40" />
        </HBox>

    </HBox>

    <HBox spacing="10" alignment="CENTER_LEFT">
        <padding><Insets left="5" right="5"/></padding>

        <HBox spacing="3" alignment="CENTER_LEFT">
        <Button text="sin-¹"  prefWidth="50" />
        <Button text="cos-¹"  prefWidth="50" />
        <Button text="tan-¹"  prefWidth="50" />
        <Button text="sinh-¹" prefWidth="50" />
        <Button text="cosh-¹" prefWidth="50" />
        <Button text="tanh-¹" prefWidth="50" />
        </HBox>

        <HBox spacing="3" alignment="CENTER_LEFT">
        <Button text="4" prefWidth="40" />
        <Button text="5" prefWidth="40" />
        <Button text="6" prefWidth="40" />
        <Button text="-" prefWidth="40" />
        </HBox>

    </HBox>

    <HBox spacing="10" alignment="CENTER_LEFT">
        <padding><Insets left="5" right="5"/></padding>

        <HBox spacing="3" alignment="CENTER_LEFT">
        <Button text="x²"  prefWidth="50" />
        <Button text="x³"  prefWidth="50" />
        <Button text="xⁿ"  prefWidth="50" />
        <Button text="10ⁿ" prefWidth="50" />
        <Button text="eⁿ"  prefWidth="50" />
        <Button text="ln"  prefWidth="50" />
        </HBox>

        <HBox spacing="3" alignment="CENTER_LEFT">
        <Button text="1" prefWidth="40" />
        <Button text="2" prefWidth="40" />
        <Button text="3" prefWidth="40" />
        <Button text="+" prefWidth="40" />
        </HBox>

    </HBox>

    <HBox spacing="10" alignment="CENTER_LEFT">
        <padding><Insets left="5" right="5" bottom="5"/></padding>

        <HBox spacing="3" alignment="CENTER_LEFT">
        <Button text="√"    prefWidth="50" />
        <Button text="³√"   prefWidth="50" />
        <Button text="ⁿ√"   prefWidth="50" />
        <Button text="log"  prefWidth="50" />
        <Button text="log2" prefWidth="50" />
        <Button text="logn" prefWidth="50" />
        </HBox>

        <HBox spacing="3" alignment="CENTER_LEFT">
        <Button text="0" prefWidth="83" />
        <Button text="." prefWidth="40" />
        <Button text="=" prefWidth="40" />
        </HBox>

    </HBox>

</VBox>
</AnchorPane>